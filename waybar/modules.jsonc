{
	"hyprland/workspaces": {
		"active-only": false,
		"all-outputs": true,
		"hide-active": false,
		"format": "{name} {windows}",
		"format-icons": {
			"active": "",
			"default": "",
			"empty": "",
			"persistent": "",
			"special": "",
			"urgent": ""
		},
		"format-window-separator": "│",
		"ignore-workspaces": [],
		"persistent-only": false,
		"persistent-workspaces": {},
		"show-special": true,
		"sort-by": "DEFAULT",
		"special-visible-only": true,
		"workspace-taskbar": {
			"enable": true,
			"update-active-window": true,
			"format": "{icon}",
			"icon-size": 24,
			"orientation": "horizontal"
		}
	},
	"hyprland/window": {
		"format": "{title}",
		"rewrite": {},
		"separate-outputs": false,
		"icon": true,
		"icon-size": 24
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": " ",
			"deactivated": " "
		}
	},
	"wireplumber": {
		"format": "{icon} {volume} | {format_source}",
		"format-muted": "  {volume} | {format_source}",
		"format-source": " {volume}%",
		"format-source-muted": " {volume}",
		"format-icons": {
			"headphone": " ",
			"hands-free": " ",
			"headset": " ",
			"phone": " ",
			"portable": " ",
			"car": " ",
			"default": [
				" ",
				" ",
				" "
			]
		},
		"tooltip": true,
		"tooltip-format": "{source_desc}",
		"on-click": "pavucontrol",
		"on-click-right": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
		"on-click-middle": "coppwr"
	},
	"network": {
		"format": "{icon}",
		"format-wifi": "{icon} {essid} ({signalStrength}%)",
		"format-ethernet": "{icon} {ipaddr}/{cidr}",
		"format-linked": "{icon} {ifname} (No IP)",
		"format-disconnected": "{icon} Disconnected",
		"tooltip-format": "{ifname} via {gwaddr}\n  {bandwidthUpBytes}    {bandwidthDownBytes}",
		// 	// "on-click": "",
		// 	// "on-click-middle": "",
		// 	// "on-click-right": ""
		"format-icons": {
			"wifi": " ",
			"ethernet": " ",
			"linked": " ",
			"disconnected": " "
		}
	},
	"bluetooth": {
		"format":"󰂯 {status}",
		"format-disabled":"",
		"format-off":"󰂲 {status}",
		"format-on":"󰂱 {status}",
		"format-connected": " {num_connections} connected",
		"format-no-controller": "󰂯 {status}",

		"tooltip-format": "{controller_alias}\t{controller_address}\t{controller_address_type}",
		"tooltip-format-disabled":"",
		"tooltip-format-off":"",
		"tooltip-format-on":"",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}\t{device_address_type}",
		"on-click": "",
		"on-click-right": "",
		"on-click-middle": ""
	},
	"cpu": {
		"format": "{icon} {usage}%",
		"format-icons": [
			" "
		],
		"tooltip": true
	},
	"memory": {
		"format": "{icon} {percentage}%",
		"format-icons": [
			" "
		],
		"tooltip": true,
		"tooltip-format": "{used} / {total} GiB"
	},
	"temperature": {
		"critical-threshold": 80,
		"format-critical": "{icon} {temperatureC}°C",
		"format": "{icon} {temperatureC}°C",
		"format-icons": [
			"",
			""
		],
		"tooltip": false
	},
	"hyprland/language": {
		"format": "{}",
		"format-en": "🇺🇸 EN",
		"format-ru": "🇷🇺 RU"
	},
	"battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{icon} {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-alt": "{time} {icon}",
		"format-icons": [
			" ",
			" ",
			" ",
			" ",
			" "
		]
	},
	"battery#bat2": {
		"bat": "BAT2"
	},
	"keyboard-state": {
		"numlock": true,
		"capslock": true,
		"format": "{name} {icon}",
		"format-icons": {
			"locked": " ",
			"unlocked": " "
		}
	},
	"clock": {
		"interval": 1,
		"format": "{:L%H:%M:%S | %e %B %Y}",
		"tooltip": true,
		"tooltip-format": "<tt><big>{calendar}</big></tt>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 4,
			"weeks-pos": "left",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#a4daff'><b>{}</b></span>",
				"days": "<span color='#7aa2f7'><b>{}</b></span>",
				"weeks": "<span color='#c0caf5'><b>{:%W}│</b></span>",
				"weekdays": "<span color='#c7a9ff'><b><u>{}</u></b></span>",
				"today": "<span color='#9fe044'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-click": "mode",
			"on-click-middle": "",
			"on-click-right": "shift_reset",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"tray": {
		"show-passive-items": true,
		"spacing": 10
	},
	"custom/power": {
		"format": "⏻ ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"lock": "loginctl lock-session",
			"logout": "loginctl terminate-user $UID",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate",
			"shutdown": "systemctl poweroff",
			"reboot": "systemctl reboot"
		}
	}
}
